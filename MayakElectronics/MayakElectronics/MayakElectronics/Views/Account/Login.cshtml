@model LoginViewModel

<!doctype html>
<html class="no-js" lang="en">

<body>

<!-- Login Section Start -->
<div class="login-section section mt-90 mb-90">
    <div class="container">
        <div class="row">
            
            <!-- Login -->
            <div class="col-md-6 col-12 d-flex">
                <div class="ee-login">

                    <h3>Login to your account</h3>
                    <!-- Login Form -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="row">
                            <div class="col-12 mb-30">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" placeholder="User name">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-20">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" placeholder="Enter your password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-12"><input type="submit" value="LOGIN"></div>
                        </div>
                    </form>
                    <h4>Don’t have account? please click <a asp-controller="Account" asp-action="Register">Register</a></h4>

                </div>
            </div>
            
            <div class="col-md-1 col-12 d-flex">
                
                <div class="login-reg-vertical-boder"></div>
                
            </div>
            
            
        </div>
    </div>
</div>
</body>

</html>